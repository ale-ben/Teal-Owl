{
    "compilerOptions": {
        "strict": true,
        "module": "commonjs",
        "target": "ES2020",
        "esModuleInterop": true,
        "sourceMap": false,
        "rootDir": "src",
        "outDir": "dist/js",
        "noEmitOnError": true,
        "typeRoots": ["node_modules/@types"],
        "moduleResolution": "node",
        "skipLibCheck": true
    },
    "types": [
        //(various types, e.g. jquery, core-js),
        "google-apps-script",
        "chrome",
        "node",
        "jest",
		"gapi",
		"google.picker"
    ],
	"include": ["src/**/*"]
}